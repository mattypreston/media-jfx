<%= form_for @site, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_line_1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_line_1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_line_2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_line_2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_line_3, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_line_3, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :post_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :post_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :county, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :county, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sites_path, :class => 'btn' %>
  </div>
<% end %>
