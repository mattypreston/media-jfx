<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:device_id) %>:</strong></dt>
  <dd><%= @schedule.device.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:package_id) %>:</strong></dt>
  <dd><%= @schedule.package.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date_time) %>:</strong></dt>
  <dd><%= @schedule.start_date_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date_time) %>:</strong></dt>
  <dd><%= @schedule.end_date_time %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              schedules_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_path(@schedule), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_path(@schedule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
