<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:device_id) %></th>
      <th><%= model_class.human_attribute_name(:package_id) %></th>
      <th><%= model_class.human_attribute_name(:start_date_time) %></th>
      <th><%= model_class.human_attribute_name(:end_date_time) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= link_to schedule.id, schedule_path(schedule) %></td>
        <td><%= schedule.device.name %></td>
        <td><%= schedule.package.name %></td>
        <td><%= schedule.start_date_time %></td>
        <td><%= schedule.end_date_time %></td>
        <td>
          <% if schedule.force_flag %>
          <button id="btn_force<%= schedule.id %>" class='btn btn-mini btn-success unforce' data-schedule-id="<%= schedule.id %>" data-target="#force">Unforce</button>
          <% else %>
          <button id="btn_force<%= schedule.id %>" class='btn btn-mini btn-primary force' data-schedule-id="<%= schedule.id %>" data-target="#force">Force</button>
          <% end %>
          <%= render :partial => 'modal_dialog' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_schedule_path(schedule), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      schedule_path(schedule),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_schedule_path,
            :class => 'btn btn-primary' %>

